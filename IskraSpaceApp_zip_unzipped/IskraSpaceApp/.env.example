# ============================================
# Iskra Space App - Environment Configuration
# Canon v5.0
# ============================================

# --- API Keys (Required for full functionality) ---
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# --- LLM Configuration ---
GEMINI_MODEL=gemini-3.0-pro-latest
OPENAI_MODEL=gpt-4o
LLM_PROVIDER=openai
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# --- Application Configuration ---
VITE_APP_TITLE=Iskra Space App
VITE_APP_VERSION=5.0.0
ENVIRONMENT=development
DEBUG=true

# --- Server Configuration ---
HOST=0.0.0.0
PORT=8000
WORKERS=4
CORS_ORIGINS=*

# --- Database Configuration ---
USE_SQLITE=true
SQLITE_PATH=data/iskra.db
# PostgreSQL (for production)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=iskra
# POSTGRES_PASSWORD=your-password
# POSTGRES_DB=iskra_db

# --- Redis Configuration (optional) ---
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# --- Vector Database ---
VECTOR_DB_BACKEND=chromadb
CHROMA_PERSIST_DIR=data/chroma
EMBEDDING_DIM=1536

# --- Authentication ---
# JWT_SECRET=auto-generated-if-not-set
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# --- Monitoring (optional) ---
# SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO
LOG_FORMAT=json

# --- Development ---
NODE_ENV=development
