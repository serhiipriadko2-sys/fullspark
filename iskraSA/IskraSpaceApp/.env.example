# ============================================
# Iskra Space App - Complete Environment Configuration
# Canon v5.0 - Full Infrastructure
# ============================================

# ===========================================
# API KEYS (Required for full functionality)
# ===========================================
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
BING_API_KEY=your-bing-api-key-here

# ===========================================
# LLM CONFIGURATION
# ===========================================
LLM_PROVIDER=openai
# Options: openai, anthropic, ollama, gemini

# OpenAI
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic
ANTHROPIC_MODEL=claude-3-opus-20240229

# Gemini
GEMINI_MODEL=gemini-3.0-pro-latest

# Ollama (local)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# Generation Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TOP_P=0.9

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
VITE_APP_TITLE=Iskra Space App
VITE_APP_VERSION=5.0.0
ENVIRONMENT=development
DEBUG=true

# ===========================================
# SERVER CONFIGURATION
# ===========================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
CORS_ORIGINS=*

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# SQLite (development - default)
USE_SQLITE=true
SQLITE_PATH=data/iskra.db
ISKRA_DB_PATH=iskra_archive.db

# PostgreSQL (production)
# USE_SQLITE=false
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=iskra
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=iskra_db
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false
REDIS_POOL_SIZE=10
REDIS_DEFAULT_TTL=3600
REDIS_SESSION_TTL=86400

# ===========================================
# VECTOR DATABASE CONFIGURATION
# ===========================================
VECTOR_DB_BACKEND=chromadb
# Options: chromadb, qdrant, pinecone, weaviate, milvus, memory

# Common
EMBEDDING_DIM=1536
VECTOR_COLLECTION=iskra_memories

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIR=data/chroma

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your-qdrant-api-key

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENV=us-west1-gcp
PINECONE_INDEX=iskra

# ===========================================
# AUTHENTICATION
# ===========================================
# JWT_SECRET=auto-generated-if-not-set
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# API Keys (comma-separated list for service accounts)
API_KEYS=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# MONITORING & LOGGING
# ===========================================
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_RATE=0.1

LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/iskra.log

PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ===========================================
# DEVELOPMENT
# ===========================================
NODE_ENV=development
