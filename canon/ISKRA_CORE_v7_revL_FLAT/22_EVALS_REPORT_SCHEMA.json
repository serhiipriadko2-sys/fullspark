{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "IskraEvalRun",
  "type": "object",
  "required": [
    "run_id",
    "built_at",
    "suite_id",
    "environment",
    "results",
    "overall"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "minLength": 6
    },
    "built_at": {
      "type": "string",
      "minLength": 10,
      "description": "UTC ISO8601"
    },
    "suite_id": {
      "type": "string",
      "enum": [
        "R01-R12"
      ]
    },
    "environment": {
      "type": "object",
      "required": [
        "pack_build",
        "runner"
      ],
      "properties": {
        "pack_build": {
          "type": "string"
        },
        "runner": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "results": {
      "type": "array",
      "minItems": 12,
      "items": {
        "type": "object",
        "required": [
          "id",
          "status",
          "observations"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^R\\d{2}$"
          },
          "status": {
            "type": "string",
            "enum": [
              "pass",
              "fail",
              "warn",
              "pending"
            ]
          },
          "observations": {
            "type": "string"
          },
          "evidence": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Trace refs like e:canon:07#... or e:archive:..."
          },
          "metrics": {
            "type": "object",
            "additionalProperties": {
              "type": "number"
            }
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "overall": {
      "type": "object",
      "required": [
        "status",
        "fails",
        "warns"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "pass",
            "fail",
            "pending"
          ]
        },
        "fails": {
          "type": "integer",
          "minimum": 0
        },
        "warns": {
          "type": "integer",
          "minimum": 0
        },
        "summary": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}